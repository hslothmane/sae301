{# templates/tache/index.html.twig #}

<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>To do liste</title>
    <link rel="stylesheet" href="{{ asset('css/tache.css') }}">
</head>

<body>
           <header class="header_dec">
        <a href="{{ path('connexion') }}" id="logout">Deconnexion</a>
    </header>

<div class="app">

    <div id="addNew" data-bs-toggle="modal" data-bs-target="#form">
      <span>Ajouter une nouvelle tache</span>
      <i class="fas fa-plus"></i>
    </div>

    <!-- Modal -->
    <form class="modal fade" id="form" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ajouter une nouvelle tâche</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Titre de la tache</p>
<input type="text" class="form-control" name="" id="textInput">
            <div id="msg"></div>
            <br>
            <p>Date d'échéance</p>
            <input type="date" class="form-control" name="" id="dateInput">
            <br>
            <p>Délai</p>
            <input type="time" class="form-control" name="timeInput" id="timeInput">
            <br>
            <p>Description</p>
            <textarea name="" class="form-control" id="textarea" cols="30" rows="5"></textarea>
            <br>
            <p>Type</p>
            <select class="form-select" name="typeInput" id="typeInput">
              <option value="">-- Choose the type --</option>
              <option value="Rendu">Rendu</option>
              <option value="Examens">Examen</option>
              <option value="Rattrapage">Rattrapage</option>
              <option value="Evenement">Événement</option>
            </select>
            <br>
            <p>Groupe de TD</p>
            <select class="form-select" name="tdGroupInput" id="tdGroupInput">
              <option value="">-- Choose the TD group --</option>
              <option value="TD1">TD1</option>
              <option value="TD2">TD2</option>
            </select>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            <button type="submit" id="add" class="btn btn-primary">Ajouter</button>
          </div>
        </div>
      </div>
    </form>

    <h5 class="text-center my-3">Tâches</h5>

    <div id="tasks"></div>
  </div>

  <script src="{{ asset('js/tache.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>

</html>
